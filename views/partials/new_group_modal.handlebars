<!-- Button to Open the Modal -->
<button type="button" class="btn btn-primary edit-modal-opener" data-toggle="modal" data-target="#newProductModal">
  Új csoport felvétele
</button>

<!-- The Modal -->
<div class="modal fade edit-modal" id="newProductModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
  
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title ">Új csoport</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <form method="POST" action="/newcategory">
        <!-- Modal body -->
            <div class="modal-body">
                <div class="form-group text-left d-none">
                    <label class="head-label ">ID: </label>
                    <input class="form-control" type="text" name="categoryId" value=""> 
                </div>
                <div class="form-group text-left">
                    <label class="head-label ">Csoport neve: </label>
                    <input class="form-control" type="text" name="newCategory" value=""> 
                </div>
              
            </div>
    
            <!-- Modal footer -->
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Mégse</button>
            <input type="submit" class="btn btn-success" value='Mentés'>

            </div>
        </form>
  
      </div>
    </div>
  </div>

