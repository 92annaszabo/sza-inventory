<!-- Button to Open the Modal -->
<button type="button" data-id="delete-product_{{this.id}}" class="btn btn-secondary" data-toggle="modal" data-target="#delete-product_{{this.id}}">
  Törlés
</button>

<!-- The Modal -->
<div class="modal fade" id="delete-product_{{this.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
  
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title ">{{this.name}} törlése</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <form method="POST" action="/deleteproduct">
        <!-- Modal body -->
            <div class="modal-body text-left">
                Biztos vagy benne, hogy véglegesen törlöd ezt a terméket?
            </div>
            <div class="form-group text-left d-none">
                    <label class="head-label ">ID: </label>
                    <input class="form-control" type="text" name="product_id" value="{{this.id}}"> 
                </div>
    
            <!-- Modal footer -->
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Mégse</button>
            <input type="submit" class="btn btn-danger" value='Törlés'>

            </div>
        </form>
  
      </div>
    </div>
  </div>

